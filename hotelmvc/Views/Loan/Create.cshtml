@model hotelmvc.Models.LoanModel

@{
    ViewData["Title"] = "Add New Loan";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var statusOptions = new List<SelectListItem>
    {
        new SelectListItem { Text = "Approved", Value = "Approved" },
        new SelectListItem { Text = "Pending", Value = "Pending" },
        new SelectListItem { Text = "Rejected", Value = "Rejected" }
    };
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0"
         style="width: 500px; border-radius: 20px; background-color: #6c757d; backdrop-filter: blur(16px); color: white; box-shadow: 0 8px 32px rgba(0,0,0,0.3);">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 text-white">Add New Loan</h4>

            <form asp-action="Create" method="post">


                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label">Select Customer</label>
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                        <option value="">-- Select Customer --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-warning small"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="LoanAmount" class="form-label">Loan Amount</label>
                    <input asp-for="LoanAmount" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="LoanAmount" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select bg-light text-dark rounded" asp-items="statusOptions">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="StartDate" class="text-warning small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="EndDate" class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="EndDate" class="text-warning small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
                    <button type="submit" class="btn btn-light text-primary fw-semibold">Save</button>
                </div>
            </form>
        </div>

        <!-- Chip icon -->
        <div style="position: absolute; bottom: 16px; left: 20px;">
            <img src="https://img.icons8.com/ios-filled/50/ffffff/sim-card-chip.png" alt="chip" style="width: 40px; opacity: 0.5;" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
