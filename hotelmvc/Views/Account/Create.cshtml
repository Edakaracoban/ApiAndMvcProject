@model hotelmvc.Models.AccountModel

@{
    ViewData["Title"] = "Yeni Hesap Oluştur";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0"
         style="width: 520px; border-radius: 20px; background-color: #6c757d; backdrop-filter: blur(18px); color: white; position: relative; box-shadow: 0 8px 32px rgba(0,0,0,0.3);">
        <div class="card-body p-4">

            <h4 class="fw-bold mb-4 text-white">Yeni Banka Hesabı Oluştur</h4>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="AccountNumber" class="form-label">Hesap Numarası</label>
                    <input asp-for="AccountNumber" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="AccountNumber" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label">Müşteri Seçiniz</label>
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                        <option value="">-- Müşteri Seçiniz --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-warning small"></span>
                </div>


                <div class="mb-4">
                    <label asp-for="Balance" class="form-label">Başlangıç Bakiyesi (₺)</label>
                    <input asp-for="Balance" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Balance" class="text-warning small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">İptal</a>
                    <button type="submit" class="btn btn-light text-primary fw-semibold">Oluştur</button>
                </div>
            </form>
        </div>

        <!-- Dekoratif sim -->
        <div style="position: absolute; bottom: 16px; left: 20px;">
            <img src="https://img.icons8.com/ios-filled/50/ffffff/sim-card-chip.png" alt="chip" style="width: 40px; opacity: 0.5;" />
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
