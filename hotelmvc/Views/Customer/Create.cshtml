@model hotelmvc.Models.CustomerModel

@{
    ViewData["Title"] = "Add New Customer";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0"
         style="width: 500px; border-radius: 20px; background-color: #6c757d; backdrop-filter: blur(16px); color: white; box-shadow: 0 8px 32px rgba(0,0,0,0.3);">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 text-white">Add New Customer</h4>

            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Name" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Email" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Phone" class="text-warning small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="form-label">Address</label>
                    <textarea asp-for="Address" class="form-control bg-light text-dark rounded" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-warning small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
                    <button type="submit" class="btn btn-light text-primary fw-semibold">Save</button>
                </div>
            </form>
        </div>

        <!-- Chip icon -->
        <div style="position: absolute; bottom: 16px; left: 20px;">
            <img src="https://img.icons8.com/ios-filled/50/ffffff/sim-card-chip.png" alt="chip" style="width: 40px; opacity: 0.5;" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
