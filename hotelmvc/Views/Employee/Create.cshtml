@model hotelmvc.Models.Employee

@{
    ViewData["Title"] = "Add New Employee";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var branchOptions = ViewBag.Branches as List<SelectListItem>;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0"
         style="width: 500px; border-radius: 20px; background-color: #6c757d; backdrop-filter: blur(16px); color: white; box-shadow: 0 8px 32px rgba(0,0,0,0.3);">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 text-white">Add New Employee</h4>

            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Name" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Position" class="form-label">Position</label>
                    <input asp-for="Position" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Position" class="text-warning small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="BranchId" class="form-label">Select Branch</label>
                    <select asp-for="BranchId" class="form-select bg-light text-dark rounded" asp-items="branchOptions">
                        <option value="">-- Select Branch --</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-warning small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
                    <button type="submit" class="btn btn-light text-primary fw-semibold">Save</button>
                </div>
            </form>
        </div>

        <!-- Chip icon -->
        <div style="position: absolute; bottom: 16px; left: 20px;">
            <img src="https://img.icons8.com/ios-filled/50/ffffff/sim-card-chip.png" alt="chip" style="width: 40px; opacity: 0.5;" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
