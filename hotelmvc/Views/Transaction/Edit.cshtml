@model hotelmvc.Models.TransactionModel

@{
    ViewData["Title"] = "Edit Transaction";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0"
         style="width: 500px; border-radius: 20px; background-color: #6c757d; backdrop-filter: blur(16px); color: white; box-shadow: 0 8px 32px rgba(0,0,0,0.3);">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 text-white">Update Transaction</h4>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="TransactionId" />

                <div class="mb-3">
                    <label asp-for="AccountId" class="form-label">Account</label>
                    <select asp-for="AccountId" class="form-select bg-light text-dark rounded" asp-items="@(ViewBag.Accounts as List<SelectListItem>)">
                        <option value="">-- Select Account --</option>
                    </select>
                    <span asp-validation-for="AccountId" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionType" class="form-label">Transaction Type</label>
                    <input asp-for="TransactionType" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="TransactionType" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label">Amount</label>
                    <input asp-for="Amount" class="form-control bg-light text-dark rounded" />
                    <span asp-validation-for="Amount" class="text-warning small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" type="datetime-local" class="form-control bg-light text-dark rounded"
                           value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="Date" class="text-warning small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
                    <button type="submit" class="btn btn-light text-primary fw-semibold">Update</button>
                </div>
            </form>
        </div>

        <!-- Chip icon -->
        <div style="position: absolute; bottom: 16px; left: 20px;">
            <img src="https://img.icons8.com/ios-filled/50/ffffff/sim-card-chip.png" alt="chip" style="width: 40px; opacity: 0.5;" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
