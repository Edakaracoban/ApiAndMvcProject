@model hotelmvc.Models.TransactionModel

@{
    ViewData["Title"] = "Transaction Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";

    string avatarUrl = $"https://ui-avatars.com/api/?name={Uri.EscapeDataString(Model.Account?.Customer?.Name ?? "User")}&background=ffffff&color=4e54c8&size=64";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0"
         style="width: 600px; border-radius: 20px; background-color: #6c757d; backdrop-filter: blur(16px); color: white; position: relative; box-shadow: 0 8px 32px rgba(0,0,0,0.3);">
        <div class="card-body p-4">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">Transaction Info</h4>
                    <small class="text-white-50">Details of the transaction</small>
                </div>
                <img src="@avatarUrl"
                     class="rounded-circle border border-white shadow" style="width: 56px;" alt="Avatar" />
            </div>

            <!-- Transaction Info -->
            <p class="mb-2"><strong>Transaction ID:</strong> @Model.TransactionId</p>
            <p class="mb-2"><strong>Account ID:</strong> @Model.AccountId</p>
            <p class="mb-2"><strong>Account Owner:</strong> @Model.Account.Customer.Name</p>
            <p class="mb-2"><strong>Transaction Type:</strong> @Model.TransactionType</p>
            <p class="mb-2"><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
            <p class="mb-4"><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd HH:mm")</p>

            <!-- Back button -->
            <a asp-action="Index" class="btn btn-outline-light btn-sm mt-3" title="Back to List">
                <iconify-icon icon="mdi:arrow-left" style="font-size: 18px;"></iconify-icon> Back
            </a>
        </div>

        <!-- Decorative Chip Icon -->
        <div style="position: absolute; bottom: 16px; left: 20px;">
            <img src="https://img.icons8.com/ios-filled/50/ffffff/sim-card-chip.png" alt="chip" style="width: 44px; opacity: 0.5;" />
        </div>
    </div>
</div>
